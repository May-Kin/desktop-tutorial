<mvc:View
    controllerName="assignment.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page floatingFooter="true">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Image
                        height="1.5rem"
                        class="sapUiSmallMarginBegin"
                        src="https://www.sap.com/dam/application/shared/logos/sap-logo-svg.svg"
                    />
                    <Title
                        level="H1"
                        text="{i18n>headerText}"
                    />
                </contentLeft>
            </Bar>
        </customHeader>
        <content>
            <FlexBox
                wrap="Wrap"
                width="70%"
            >
                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTop">
                    <Text text="{i18n>pic}" />
                    <Input
                        id="Z_ASGID001"
                        showSuggestion="true"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequest1"
                        suggestionItems="{/Employees}"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    >
                        <suggestionItems>
                            <core:Item text="{FirstName}" />
                        </suggestionItems>
                    </Input>
                </VBox>

                <VBox
                    class="sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>purchaseGroup}" />
                    <Input
                        id="EKGRP001"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    />
                </VBox>

                <VBox
                    class="sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>vendor}" />
                    <Input
                        id="LIFNR001"
                        showSuggestion="true"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequest2"
                        suggestionItems="{/Employees}"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    >
                        <suggestionItems>
                            <core:Item text="{City}" />
                        </suggestionItems>
                    </Input>
                </VBox>

                <VBox
                    class="sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>name}" />
                    <Input
                        id="BISMT001"
                        showSuggestion="true"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequest3"
                        suggestionItems="{/Employees}"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    >
                        <suggestionItems>
                            <core:Item text="{Extension}" />
                        </suggestionItems>
                    </Input>
                </VBox>

                <VBox
                    class="sapUiSmallMarginBegin sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>material}" />
                    <Input
                        id="EMATN001"
                        showSuggestion="true"
                        showValueHelp="true"
                        valueHelpRequest=".onValueHelpRequest4"
                        suggestionItems="{/Employees}"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    >
                        <suggestionItems>
                            <core:Item text="{Country}" />
                        </suggestionItems>
                    </Input>
                </VBox>

                <VBox
                    class="sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>plant}" />
                    <Input
                        id="WERKS001"
                        width="300px"
                        class="sapUiSmallMarginEnd"
                    />
                </VBox>

                <VBox
                    class="sapUiSmallMarginTop"
                    height="50px"
                >
                    <Text text="{i18n>productName}" />
                    <Input
                        id="MAKT001"
                        width="300px"
                    />
                </VBox>
            </FlexBox>
            <FlexBox justifyContent="End">
                <Button
                    text="{i18n>searchButton}"
                    class="sapUiSmallMarginEnd"
                    press="onFilterPosts"
                />
                <Button
                    text="{i18n>clearButton}"
                    class="sapUiSmallMarginEnd"
                    press="clearInput"
                />
            </FlexBox>
        </content>

        <mvc:XMLView
            id="innerTable"
            viewName="assignment.view.Table"
        />

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="{i18n>register}"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
